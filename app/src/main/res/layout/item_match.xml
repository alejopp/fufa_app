<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_ht"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/etv_league_tournament_home_goals"
        app:layout_constraintEnd_toStartOf="@+id/etv_league_tournament_home_goals"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_round_number"
        tools:text="@tools:sample/cities" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vs"
        app:layout_constraintBottom_toBottomOf="@+id/etv_league_tournament_visitor_goals"
        app:layout_constraintEnd_toEndOf="@id/vgl_item_math_53"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/etv_league_tournament_home_goals"
        app:layout_constraintStart_toStartOf="@+id/vgl_item_match_47"
        app:layout_constraintTop_toTopOf="@+id/tv_ht" />

    <TextView
        android:id="@+id/tv_vt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/etv_league_tournament_visitor_goals"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toEndOf="@+id/etv_league_tournament_visitor_goals"
        app:layout_constraintTop_toTopOf="@+id/tv_ht"
        app:layout_constraintVertical_bias="0.0"
        tools:text="@tools:sample/cities" />

    <EditText
        android:id="@+id/etv_league_tournament_home_goals"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:inputType="number"
        android:hint="@string/hyphen"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/vgl_item_match_47"
        app:layout_constraintTop_toBottomOf="@+id/tv_round_number" />

    <EditText
        android:id="@+id/etv_league_tournament_visitor_goals"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:inputType="number"
        android:hint="@string/hyphen"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/vgl_item_math_53"
        app:layout_constraintTop_toTopOf="@+id/etv_league_tournament_home_goals" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vgl_item_match_47"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.47" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vgl_item_math_53"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.53" />

    <TextView
        android:id="@+id/tv_round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/round"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_round_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tv_round"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/position_mark" />

</androidx.constraintlayout.widget.ConstraintLayout>